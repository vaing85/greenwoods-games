# ðŸš€ Greenwood Games - Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Environment
NODE_ENV=production

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-super-secure-mongo-password-change-me
MONGO_DB_NAME=greenwood_games
MONGO_PORT=27017

# Redis Configuration  
REDIS_PASSWORD=your-super-secure-redis-password-change-me
REDIS_PORT=6379

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-me
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Server Configuration
SERVER_PORT=5000
WEB_PORT=3000

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Frontend URLs
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_SOCKET_URL=https://api.yourdomain.com

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password-change-me

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=greenwood-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=Greenwood Games <noreply@yourdomain.com>

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_LIVE_DEALER=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Performance Configuration
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
UPLOAD_LIMIT=10mb

# Security Headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_REPORT_URI=https://yourdomain.com/csp-report

# Domain Configuration
DOMAIN_NAME=yourdomain.com
API_SUBDOMAIN=api
CDN_SUBDOMAIN=cdn

# Cache Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
